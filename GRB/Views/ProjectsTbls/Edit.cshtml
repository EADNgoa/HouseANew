@model GRB.Models.ProjectsImg

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Proj_Pic", (string)ViewBag.ExistingImg)
    <div class="form-horizontal">
        <h4>Project Info</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Proj_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Proj_Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Proj_Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Proj_Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Proj_Desc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Proj_Desc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Proj_Desc, "", new { @class = "text-danger" })
            </div>
        </div>
                
        <div class="form-group">
            @Html.LabelFor(model => model.Proj_Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Proj_Status",new List<SelectListItem> { new SelectListItem { Value="Completed", Text="Completed"}, new SelectListItem { Value="On Going", Text="On Going"}, new SelectListItem { Value="Planned", Text="Planned"} }, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.Proj_Status, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Image</label>
            <div class="col-md-3">
                <input class="form-control" type="file" id="UploadedFile" name="UploadedFile" /> Existing file: @ViewBag.ExistingFile
            </div>
            <div class="col-md-7">
                <label class="control-label">*Image should be in 3x2 ratio with a width of about 300 pixels only.</label>
            </div>
            
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
