@model IEnumerable<GRB.Models.GoaRehabTbl>
@using GRB.Models;

<style>
    #map {
        width: 700px;
        height: 400px;
        background-color: grey;
    }
</style>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "About";
    var msg = (String)ViewBag.Message;
    var info = (GoaRehabTbl)ViewBag.info;
}

<h2>About</h2>

@using (Html.BeginForm())
{
    <div class="container">
        <h2>Goa Rehabilitation Centre</h2>
        <div class="row">
            <div class="col-lg-3">
                <h2 for="mis">Mission:</h2>
                <p id="mis">@info.Mission</p>
                <h2 for="mis">Vision:</h2>
                <p id="mis">@info.Vision</p>
            </div>
            <div class="col-lg-9">                
                <div>
                    <h2>Our Location on the map</h2>
                    <div id="map"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="container-fluid">
                <h2>Right To Information</h2>
            </div>
        </div>
        <h2>Contact Information</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="container">
                    <label for="phno">Phone Number:</label>
                    <p id="phno">@info.Ph_No
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="container">
                    <label for="addr">Address:</label>
                    <p id="addr">
                        @info.Addr
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="container">
                    <label for="eid">Email Id:</label>
                    <p id="eid">
                        @info.Emails
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="container-fluid">
                <h2>Description</h2>
                <div style="white-space: pre-wrap;">@info.Desc</div>
            </div>
        </div>
    </div>
}
@*Map by tonytartis*@
<script>
    function initMap() {
         
        var uluru = { lat: 15.496042, lng: 73.835268};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: uluru
        });
        var marker = new google.maps.Marker({
            position: uluru,
            
          map: map
        });
      }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBowdOJ403ECyNEbvjLBZgdl-L4fIWKbh0&callback=initMap">
</script>
