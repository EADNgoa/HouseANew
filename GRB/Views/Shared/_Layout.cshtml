    <script src="~/Scripts/jquery.bootstrap.newsbox.min.js"></script>
    <style>
        #slide {
            width: 300%;
            animation: both 40s infinite;
            animation-timing-function: linear;
            background-color: black;
        }

            #slide a:hover {
                text-decoration: underline;
            }

            #slide:hover {
                animation-play-state: paused;
            }

        .blink {
            background-color: black;
            animation: blink 0.85s linear infinite;
        }

            .blink:hover {
                animation-play-state: paused;
            }

        .topright {
            position: absolute;
            top: 8px;
            right: 16px;
        }
    </style>
</head>
